{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "dist/types",
    "declaration": true,
    "composite": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "."
  },
  "include": [
    "index.ts",
    "unified-auth/**/*.ts",
    "unified-auth/**/*.tsx",
    "middleware/**/*.ts",
    "middleware/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**",
    "components/ChangePasswordPage.tsx",
    "components/LoginPage.tsx",
    "components/PasswordExpirationBanner.tsx",
    "middleware/ProtectedRoute.tsx"
  ],
  "references": [
    {
      "path": "../supabase"
    }
  ]
}