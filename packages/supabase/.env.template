# CourtLens Supabase Environment Configuration Template

# =========================================================================
# SUPABASE CONFIGURATION
# =========================================================================

# Your Supabase project URL (found in your project settings)
NEXT_PUBLIC_SUPABASE_URL=https://xryvcdbmljxlsrfanvrv.supabase.co

# Your Supabase anonymous (public) key (found in your project settings)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Your Supabase service role key (found in your project settings)
# ⚠️  KEEP THIS SECRET - only use server-side
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# =========================================================================
# DATABASE CONFIGURATION (Optional - for local development)
# =========================================================================

# Local Supabase configuration (when using `supabase start`)
# NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_local_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_local_service_role_key

# Database direct connection (for migrations and admin tasks)
# DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres

# =========================================================================
# SECURITY SETTINGS
# =========================================================================

# JWT Secret (for token validation - matches Supabase project)
# SUPABASE_JWT_SECRET=your_jwt_secret_here

# Additional security headers
# SUPABASE_CUSTOM_HEADERS={"x-application-name": "CourtLens"}

# =========================================================================
# DEVELOPMENT SETTINGS
# =========================================================================

# Enable debug logging for Supabase operations
# SUPABASE_DEBUG=true

# Enable real-time subscriptions
# SUPABASE_REALTIME_ENABLED=true

# =========================================================================
# SENDGRID EMAIL CONFIGURATION
# =========================================================================

# Your SendGrid API Key (get from https://app.sendgrid.com/settings/api_keys)
# ⚠️  KEEP THIS SECRET - only use server-side
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Default from email address for system emails
FROM_EMAIL=noreply@courtlens.com

# SendGrid template IDs for different email types
SENDGRID_WELCOME_TEMPLATE_ID=d-your_welcome_template_id
SENDGRID_PASSWORD_RESET_TEMPLATE_ID=d-your_reset_template_id
SENDGRID_NOTIFICATION_TEMPLATE_ID=d-your_notification_template_id

# EU Data Residency (set to true if using EU region)
SENDGRID_EU_ENABLED=false

# =========================================================================
# CANADIAN LEGAL COMPLIANCE SETTINGS
# =========================================================================

# Default province for tax calculations (used when client province not set)
# DEFAULT_PROVINCE=ON

# IOLTA compliance mode (enables additional trust account validation)
# IOLTA_COMPLIANCE_MODE=strict

# Audit log retention period (in days)
# AUDIT_LOG_RETENTION_DAYS=2555  # 7 years (Canadian legal requirement)

