# Environment: Preview/Staging
APP_ENV=preview

# API Configuration
API_URL=https://staging.unioneyes.com/api
API_TIMEOUT=30000

# Authentication (Clerk)
CLERK_PUBLISHABLE_KEY=pk_test_your_staging_clerk_key

# Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
SENTRY_ENVIRONMENT=staging
AMPLITUDE_API_KEY=your_staging_amplitude_key

# Feature Flags
ENABLE_DEV_MENU=false
ENABLE_DEBUG_MODE=false
ENABLE_MOCK_DATA=false
ENABLE_OFFLINE_MODE=true

# Logging
LOG_LEVEL=info
ENABLE_NETWORK_LOGGING=false

# App Configuration
APP_NAME=UnionEyes (Staging)
APP_SCHEME=unioneyes-staging

# Storage
STORAGE_ENCRYPTION_KEY=staging_encryption_key_change_in_production

# EAS Update
EAS_UPDATE_CHANNEL=preview

# Other Services
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true

# API Endpoints
AUTH_API_URL=https://staging.unioneyes.com/api/auth
CLAIMS_API_URL=https://staging.unioneyes.com/api/claims
DOCUMENTS_API_URL=https://staging.unioneyes.com/api/documents
NOTIFICATIONS_API_URL=https://staging.unioneyes.com/api/notifications

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# OCR Configuration
OCR_PROVIDER=cloud
OCR_CONFIDENCE_THRESHOLD=0.8

# Development Tools
ENABLE_REACT_DEVTOOLS=false
ENABLE_REDUX_DEVTOOLS=false
ENABLE_INSPECTOR=false
