{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "tsBuildInfoFile": ".next/cache/tsconfig.tsbuildinfo",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next/**",
    "__tests__/**",
    "packages/**",
    "mobile/**",
    "src/**",
    "packages/supabase/functions/**",
    "supabase/functions/**",
    "archive-old-root/**",
    "archive/**",
    "cba-intelligence/**",
    "scripts/**",
    "services/**",
    "lib/workflow-automation-engine.ts",
    "lib/workflow-engine.ts",
    "lib/services/transfer-pricing-service.ts",
    "lib/utils/rewards-stats-utils.ts",
    "lib/workers/**"
  ]
}
